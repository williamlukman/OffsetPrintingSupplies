@{
    ViewBag.Title = "CashBank Mutation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/tools.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/cashbankmutation.js")"></script>
}
<div id="ua_panel" class="easyui-panel" style="text-align: left;" data-options="modal:true" 
    title=".: @ViewBag.Title :.">
<div id="toolbar" class="form_toolbar">
        <a id="btn_reload" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'">Reload Data</a>
        <a id="btn_add_new" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Add New</a>
        <a id="btn_edit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-edit'">Edit Data</a>
        <a id="btn_del" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Delete</a>
        <a id="btn_confirm" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-approval'">Confirm</a>
        <a id="btn_unconfirm" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-undo'">Unconfirm</a>
    </div>

    <div id="table_div">
        <table id="list"></table>
        <div id="pager" class="scroll" style="text-align: center;"></div>
    </div>

<!-- Dialog Box -->
    <div id="form_div" class="easyui-dialog" style="text-align: left; padding:0px 0px 10px" data-options="modal:true"  
        title=".: @ViewBag.Title :.">

        <div id="form_toolbar" class="form_toolbar">
            <a id="form_btn_save" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Save</a>
            <a id="form_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>

        <div style="overflow: auto">
            <form id="frm">
                @*<fieldset class="ui-widget-content ui-corner-all input_form_div">*@
                    <table width="100%" border="0" cellpadding="1" cellspacing="1" class="input_form_tbl">
                        <tr nowrap>
                            <td width="139" nowrap style="width: 100px">
                                <label>ID</label></td>
                            <td width="550">
                                <input id="id" type="text" size="10" disabled="disabled"/></td>
                        </tr>
                        <tr>
                            <td>
                             <label>Code</label>
                            </td>
                            <td>
                               <input id="Code" type="text" size="10" disabled="disabled"/>
                            </td>
                        </tr>
                         <tr>
                            <td>
                                <label>Source CashBank</label></td>
                            <td>
                               <input id="SourceCashBankId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                               <input id="btnSourceCashBank" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                               <input id="SourceCashBank" name="SourceCashBank" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                             </td>        
                        </tr>
                          <tr>
                            <td>
                                <label>Target CashBank</label></td>
                            <td>
                               <input id="TargetCashBankId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                               <input id="btnTargetCashBank" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                               <input id="TargetCashBank" name="TargetCashBank" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                             </td>         
                        </tr>
                        <tr>
                            <td>
                                <label>Mutation Date</label></td>
                            <td>
                                <div id="MutationDateDiv"><input id="MutationDate" class="easyui-datebox" title="mm/dd/yyyy" type="text" size="10" value="@DateTime.Today.ToShortDateString()"/></div>
                                <div id="MutationDateDiv2"><input id="MutationDate2" type="text" size="10" disabled="disabled"/></div>
                            </td>
                        </tr>
                         <tr>
                            <td>
                                <label>Amount</label></td>
                            <td>
                                <input type="text" id="Amount" name="Amount"  class="textright easyui-numberbox" data-options="precision:0,groupSeparator:','"
                                                        value="0" size="10" maxlength="20" />
                               <label hidden>Rate</label>
                               <input hidden id="ExchangeRateAmount" name="ExchangeRateAmount" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="groupSeparator:',',precision:2" value="0"" />
                            </td>
                        </tr>
                    </table>
                @*</fieldset>*@
            </form>
        </div>
    </div>
<!-- End Dialog Box -->

 <!-- Dialog Box Confirm-->
    <div id="confirm_div" class="easyui-dialog" style="text-align: left;padding:0px 0px 10px;width :500px"
        data-options="modal:true" title=".: Confirm CashBank Adjustment :.">

        <div id="confirm_toolbar" class="form_toolbar">
            <a id="confirm_btn_submit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Submit</a>
            <a id="confirm_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>
        <div id="confirm_info">
              <table  width="100%" border="0" cellpadding="5" cellspacing="5" class="input_form_tbl">
                  <tr>
                      <td width="139" nowrap style="width: 100px">
                          Id
                      </td>
                      <td>
                         <input id="idconfirm" type="text" size="10" disabled="disabled"/>
                      </td>
                  </tr>
                  <tr>
                      <td>
                          Confirmation Date
                      </td>
                      <td>
                         <input id="ConfirmationDate"class="easyui-datebox" title="mm/dd/yyyy" type="text" size="10" value="@DateTime.Today.ToShortDateString()"/>
                         <input name="ConfirmationDate" type="text" size="1" hidden="hidden"/>
                         <input name="IsConfirmed" type="text" size="1" hidden="hidden"/>
                      </td>
                  </tr>
              </table>
          
        </div>
    </div>
<!-- End Dialog Box Confirm-->

<!-- Dialog Box  Delete-->
    <div id="delete_confirm_div" class="easyui-dialog" style="text-align: left; height: 130px; width: 300px;"
        data-options="modal:true" title=".: Confirmation :.">

        <div id="delete_confirm_toolbar" class="form_toolbar">
            <a id="delete_confirm_btn_submit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Submit</a>
            <a id="delete_confirm_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>
        <div id="delete_confirm_info">
            <span>Are you sure to delete the selected record?</span>
            <input id="delete_confirm_id" type="hidden" />
        </div>
    </div>
<!-- End Dialog Box Delete-->

 <!-- Look Up SourceCashBank -->
    <div id="lookup_div_sourcecashbank" class="easyui-dialog" title="List Cash Bank" style="padding: 0px 5px; height: 490px; width: 480px;"
        data-options="iconCls:'icon-tip',modal:true">

        <div id="lookup_toolbar_sourcecashbank" class="grid_toolbar">
            <a id="lookup_btn_add_sourcecashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Select Data</a>
            <a id="lookup_btn_cancel_sourcecashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close Window</a>
        </div>

        <table id="lookup_table_sourcecashbank" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="lookup_pager_sourcecashbank" class="scroll" style="text-align: center;"></div>
    </div>
<!-- END Look Up SourceCashBank -->


    <!-- Look Up TargetCashBank -->
    <div id="lookup_div_targetcashbank" class="easyui-dialog" title="List Cash Bank" style="padding: 0px 5px; height: 490px; width: 480px;"
        data-options="iconCls:'icon-tip',modal:true">

        <div id="lookup_toolbar_targetcashbank" class="grid_toolbar">
            <a id="lookup_btn_add_targetcashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Select Data</a>
            <a id="lookup_btn_cancel_targetcashbank" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close Window</a>
        </div>

        <table id="lookup_table_targetcashbank" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="lookup_pager_targetcashbank" class="scroll" style="text-align: center;"></div>
    </div>
<!-- END Look Up TargetCashBank -->
  </div>

