@{
    ViewBag.Title = "Master Price List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
}

@section Scripts {
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/tools.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/apps_js/pricelist.js")"></script>
}
<div id="ua_panel" class="easyui-panel" style="text-align: left;" data-options="modal:true" 
    title=".: Master Item :.">
<div id="toolbar" class="form_toolbar">
        <a id="btn_reload" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-reload'">Reload Data</a>
        <a id="btn_edit" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-edit'">Edit Price List</a>
        <a id="btn_print" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-print'">Print Data</a>
    </div>

    <div id="table_div">
        <table id="list"></table>
        <div id="pager" class="scroll" style="text-align: center;"></div>
    </div>

    <!-- Dialog Box -->
    <div id="form_div" class="easyui-dialog" style="text-align: left; padding:0px 0px 10px" data-options="modal:true"  
        title=".: Master Item :.">

        <div id="form_toolbar" class="form_toolbar">
            <a id="form_btn_save" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'">Save</a>
            <a id="form_btn_cancel" href="#" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close</a>
        </div>

        <div style="overflow: auto">
            <form id="frm">
                @*<fieldset class="ui-widget-content ui-corner-all input_form_div">*@
                    <table width="100%" border="0" cellpadding="1" cellspacing="1" class="input_form_tbl">
                        <tr nowrap>
                            <td width="139" nowrap style="width: 100px">
                                <label>ID</label></td>
                            <td width="550">
                                <input id="id" type="text" size="10" disabled="disabled"/></td>
                        </tr>
                         <tr>
                            <td>
                                <label>SKU</label></td>
                            <td >
                                <input id="SKU" name ="Sku" type="text" size="10" maxlength="60" align="left"/></td>
                        </tr>
                        <tr>
                            <td>
                                <label>Name</label></td>
                            <td colspan="3">
                                <input id="Name" name="Name" type="text" size="60" maxlength="60" align="left" /></td>
                        </tr>
                        <tr>
                            <td>
                                <label>Description</label></td>
                            <td colspan="3">
                                <input id="Description" name="Description" type="text" size="60" maxlength="60" align="left" /></td>
                        </tr>
                        <tr>
                            <td>
                                <label>Item Type</label></td>
                            <td colspan="3">
                               <input id="ItemTypeId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                               <input id="btnItemType" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                               <input id="ItemTypeName" name="ItemType" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                            </td>   
                        </tr>
                         <tr>
                            <td>
                                <label>UoM</label></td>
                            <td colspan="3">
                                <input id="UoMId"  class="textright" type="text" size="10" maxlength="7" disabled="disabled" />
                                <input id="btnUoM" name="buttonactivated" type="button" style="cursor: pointer;" class="ui-corner-all ui-state-default" value=".." />
                                <input id="UoMName" name="UoMId" type="text" size="56" maxlength="50" class="editable upper" disabled="disabled" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Minimum QTY</label></td>
                            <td colspan="3">
                                <input id="MinimumQuantity" name="MinimumQuantity" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="groupSeparator:','" value="0" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>SellingPrice</label></td>
                            <td colspan="3">
                                <input id="SellingPrice" name="SellingPrice" type="text" size="15" maxlength="20" class="textright easyui-numberbox" data-options="groupSeparator:','" value="0"  />
                            </td>
                        </tr>
                    </table>
                @*</fieldset>*@
            </form>
        </div>
    </div>
    <!-- End Dialog Box -->


    <!-- Look Up PriceMutation -->
    <div id="lookup_div_pricemutation" class="easyui-dialog" title="List Item Type" style="padding: 0px 5px; height: 490px; width: 480px;"
        data-options="iconCls:'icon-tip',modal:true">

        <div id="lookup_toolbar_pricemutation" class="grid_toolbar">
            <a id="lookup_btn_add_pricemutation" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">Select Data</a>
            <a id="lookup_btn_cancel_pricemutation" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Close Window</a>
        </div>

        <table id="lookup_table_pricemutation" class="scroll" cellpadding="0" cellspacing="0"></table>
        <div id="lookup_pager_pricemutation" class="scroll" style="text-align: center;"></div>
    </div>
    <!-- END Look Up PriceMutation -->

  </div>

